<div class="container-fluid px-4">
  <div class="row">
    <%# Cards: 2/3 of the page %>
    <div class="col-12 col-lg-8">
      <div class="cards">
        <% @flats.each do |flat| %>
          <%= link_to flat_path(flat), class: "text-decoration-none text-dark", data: { marker_id: flat.id } do %>
            <div class="card-trip">
              <img src="<%= flat.image_url %>" alt="<%= flat.name %>" />
              <div class="card-trip-infos d-flex justify-content-between align-items-center">
                <div>
                  <h2><%= flat.name %></h2>
                  <p><%= flat.address %></p>
                </div>
                <h2 class="card-trip-pricing">$<%= flat.price %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <%# Map: 1/3 of the page, sticky %>
    <div class="col-12 col-lg-4">
      <div class="card-trip-show shadow" style="position: sticky; top: 10px; height: 97vh;">
        <div
          style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
