
<%= simple_form_for [flat, request] do |f| %>
  <%= f.input :start_date, as: :string,
            input_html: { data: { controller: "datepicker", datepicker_disable: @unavailable_dates.to_json } } %>
  <%= f.input :end_date, as: :string,
            input_html: { data: { controller: "datepicker", datepicker_disable: @unavailable_dates.to_json } } %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
